<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <Title>Support Local KC</Title>
    <!-- Compressed CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
     <link 
     rel="stylesheet" 
     href="/public/CSS/style.css" 
     type="text/css" 
     media="all"
     />

  <body>
    <div class="wrapper">
      <header>
        <h1 class="has-text-black has-text-weight-bold">Support Local KC</h1>
        <nav class="navbar mt-2">
          {{#if loggedIn}}
            <a href="/" class="navbar-item is-hoverable pt-1">Homepage</a>
            <a
              href="/dashboard"
              class="navbar-item is-hoverable pt-1"
            >Dashboard</a>
            <a
              href="/dashboard/create/"
              class="navbar-item is-hoverable pt-1"
            >Add a location!</a>
            <button id="logout" class="button is-info">logout</button>

          {{else}}
            <a href="/" class="navbar-item is-hoverable pt-1">Homepage</a>
            <a href="/categories/" class="navbar-item is-hoverable pt-1">View our categories!</a>
            <a href="/login" class="button is-info">login</a>
          {{/if}}
        </nav>
      </header>

      <main>
        {{{body}}}
      </main>

      <footer class="footer rows pb-2">
        <div class="row-is-full content has-text-centered">
          <p>
            <a href="/">Homepage</a>{{#if loggedIn}}
              |
              <a href="/dashboard/">dashboard</a>
              |
              <a href="/dashboard/create/">Add a location!</a>
            {{else}}
              <a href="/login/">login</a>
              
            {{/if}}
          </p>
        </div>
      </footer>
    </div>
    {{#if loggedIn}}
      <script src="/public/javascript/logout.js"></script>
    {{/if}}
  </body>
</html>